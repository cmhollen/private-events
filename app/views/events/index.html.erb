<h1>All Events</h1>
<h3>Upcoming Events</h3>
<ul>
  <% @upcoming.each do |e| %>
    <li>
        <%= link_to e.description, event_path(e) %>
        Created by: <%= link_to e.creator.name, user_path(e.creator) %>
    </li>
  <% end %>
</ul>

<h3>Past Events</h3>
<ul>
  <% @past.each do |e| %>
    <li>
        <%= link_to e.description, event_path(e) %>
        Created by: <%= link_to e.creator.name, user_path(e.creator) %>
    </li>
  <% end %>
</ul>


